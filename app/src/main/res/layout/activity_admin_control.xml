<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:background = "@drawable/background_test"
	android:orientation = "vertical">
	
	<TextView
		android:id = "@+id/textView5"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "32dp"
		android:layout_marginEnd = "8dp"
		android:text = "Admin Panel"
		android:textColor = "@color/colorDirtyWhite"
		android:textSize = "@dimen/hotdog_amount_label_text_size"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toTopOf = "parent" />
	
	<ImageButton
		android:id = "@+id/mReset"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "16dp"
		android:layout_marginEnd = "8dp"
		android:background = "@drawable/button_remove"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/label"
		app:srcCompat = "@drawable/ic_reset" />
	
	<TextView
		android:id = "@+id/label"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "8dp"
		android:layout_marginEnd = "8dp"
		android:layout_marginBottom = "8dp"
		android:text = "RESET DATA?"
		android:textAppearance = "@style/TextAppearance.AppCompat.Display1"
		android:textColor = "@color/colorDirtyWhite"
		app:layout_constraintBottom_toBottomOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toTopOf = "parent"
		app:layout_constraintVertical_bias = "0.42000002" />
	
	<Button
		android:id = "@+id/exit"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "16dp"
		android:layout_marginEnd = "16dp"
		android:layout_marginBottom = "16dp"
		android:background = "@drawable/button_login"
		android:padding = "10dp"
		android:text = "Exit to Main menu"
		android:textColor = "@color/colorWhite"
		android:textSize = "@dimen/activity_final_title"
		app:layout_constraintBottom_toBottomOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent" />

</androidx.constraintlayout.widget.ConstraintLayout>