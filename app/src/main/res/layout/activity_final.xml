<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	android:background = "@drawable/background_test"
	tools:context = ".view.FinalActivity">
	
	<TextView
		android:id = "@+id/textView2"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "32dp"
		android:layout_marginEnd = "8dp"
		android:text = "@string/activity_final_congratulations"
		android:textSize = "@dimen/activity_final_title"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toTopOf = "parent" />
	
	<Button
		android:id = "@+id/mNext"
		android:layout_width = "0dp"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "16dp"
		android:layout_marginEnd = "16dp"
		android:layout_marginBottom = "16dp"
		android:background = "@drawable/button_login"
		android:text = "New Participant"
		android:textColor = "@color/colorWhite"
		app:layout_constraintBottom_toBottomOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent" />
	
	<TextView
		android:id = "@+id/textView4"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "60dp"
		android:layout_marginEnd = "8dp"
		android:text = "You have\ncompleted eating"
		android:textAlignment = "center"
		android:textSize = "@dimen/dialog_text"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/textView2" />
	
	<TextView
		android:id = "@+id/mCurrentRound"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "8dp"
		android:layout_marginEnd = "8dp"
		android:text = "5"
		android:textSize = "@dimen/hotdog_amount_text_size"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/textView4" />
	
	<TextView
		android:id = "@+id/mTotal"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "8dp"
		android:layout_marginEnd = "8dp"
		android:layout_marginBottom = "8dp"
		android:text = "10"
		android:textSize = "@dimen/hotdog_amount_text_size"
		app:layout_constraintBottom_toTopOf = "@+id/mNext"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/textView6"
		app:layout_constraintVertical_bias = "0.65" />
	
	<TextView
		android:id = "@+id/textView6"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginStart = "8dp"
		android:layout_marginTop = "8dp"
		android:layout_marginEnd = "8dp"
		android:text = "Hotdogs this round."
		android:textSize = "@dimen/dialog_text"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/mCurrentRound" />
	
	<TextView
		android:id = "@+id/textView7"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginBottom = "8dp"
		android:text = "Total Hotdogs Eaten"
		android:textSize = "@dimen/dialog_title"
		app:layout_constraintBottom_toTopOf = "@+id/mTotal"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent" />
</androidx.constraintlayout.widget.ConstraintLayout>